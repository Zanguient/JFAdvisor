struct Zone {
   int               id;
   string            label;
   int               type;
   double            price;
};

//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
class CZone
{
protected:
   Zone              zone;
   
public:
   void              DelLine     (string label);

   void              SetLine     (string label, int id);
   
   void              SetColor    (color cor, int ord);
   void              SetPrice    (double price);
   void              SetIndex    (int id);
   void              SetType     (int type);

   string            GetLabel    ();
   double            GetPrice    ();
   int               GetIndex    ();
   int               GetType     ();

};
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CZone::SetType(int type)
{
   zone.type = type;
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
int CZone::GetType(void)
{
   return zone.type;
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
int   CZone::GetIndex(void)
{
   return zone.id;
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string CZone::GetLabel(void)
{
   return zone.label;
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void  CZone::SetIndex(int id)
{
   zone.id = id;
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CZone::DelLine(string label)
{
   ObjectDelete(0, label);
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CZone::SetLine(string label, int id)
{
   zone.label = label;
   zone.id = id;
   ObjectCreate(0, label, OBJ_HLINE, 0, 0, 0);
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CZone::SetColor(color cor, int type)
{
   zone.type = type;
   ObjectSetInteger(0, zone.label, OBJPROP_COLOR, cor);
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CZone::SetPrice(double price)
{
   zone.price = price;
   ObjectMove  (0, zone.label, 0, 0, price);
}
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
double CZone::GetPrice()
{
   return (zone.price);
}
//+------------------------------------------------------------------+


